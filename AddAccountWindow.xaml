<Window x:Class="MizuLauncher.AddAccountWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="添加账号" Height="300" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="NoResize"
        Foreground="White"
        FontFamily="Microsoft YaHei UI">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="0" 
                      GlassFrameThickness="-1" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <CornerRadius x:Key="MainCornerRadius">12</CornerRadius>
        <SolidColorBrush x:Key="CardBackground" Color="White" Opacity="0.03"/>
        <SolidColorBrush x:Key="CardBorder" Color="Transparent"/>

        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding Tag}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#25FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                                <Setter Property="Foreground" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="MicrosoftButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#2F2F2F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8" BorderBrush="White" BorderThickness="1" Opacity="0.8">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                <TextBlock Text="" FontFamily="Segoe MDL2 Assets" Margin="0,0,10,0" VerticalAlignment="Center"/>
                                <ContentPresenter VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="1"/>
                                <Setter TargetName="Bd" Property="Background" Value="#3F3F3F"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainRoot">
        <!-- 亚克力蒙层 -->
        <Border x:Name="BgTint" Background="#E0121212" CornerRadius="12"/>

        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0">
                <TextBlock Text="添加账号" FontSize="20" FontWeight="Bold" VerticalAlignment="Center"/>
                <Button Content="" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BaseButtonStyle}" Tag="6" 
                        Foreground="White" Width="30" Height="30" FontSize="10" 
                        HorizontalAlignment="Right" VerticalAlignment="Top" 
                        WindowChrome.IsHitTestVisibleInChrome="True" Click="BtnClose_Click"/>
            </Grid>

            <!-- 内容 -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center" Margin="0,10,0,10">
                <!-- 离线账号 -->
                <TextBlock Text="离线账号" Foreground="#80FFFFFF" FontSize="12" Margin="5,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <TextBox x:Name="TxtOfflineName" Height="40" Padding="10,0" VerticalContentAlignment="Center" 
                             Background="#20FFFFFF" Foreground="White" BorderThickness="1" BorderBrush="#30FFFFFF" 
                             FontSize="14" Tag="输入玩家 ID">
                        <TextBox.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="8"/>
                            </Style>
                        </TextBox.Resources>
                    </TextBox>
                    <TextBlock IsHitTestVisible="False" Text="输入玩家 ID" VerticalAlignment="Center" Margin="12,0,0,0" Foreground="#40FFFFFF" FontSize="14">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Text, ElementName=TxtOfflineName}" Value="">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </Grid>

                <Grid Margin="0,0,0,10">
                    <Separator Background="#20FFFFFF" VerticalAlignment="Center"/>
                    <TextBlock Text="或" HorizontalAlignment="Center" Background="#FF121212" Padding="10,0" Foreground="#40FFFFFF" FontSize="12"/>
                </Grid>

                <!-- 微软账号 -->
                <TextBlock Text="微软登录" Foreground="#80FFFFFF" FontSize="12" Margin="5,0,0,5"/>
                <Button x:Name="BtnMicrosoftLogin" Content="使用 Microsoft 账号登录" Height="40" Style="{StaticResource MicrosoftButtonStyle}" Click="BtnMicrosoftLogin_Click"/>
            </StackPanel>

            <!-- 底部按钮 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="取消" Width="80" Height="32" Style="{StaticResource BaseButtonStyle}" Tag="6" Margin="0,0,10,0" Click="BtnClose_Click"/>
                <Button x:Name="BtnConfirmOffline" Content="确定" Width="80" Height="32" Style="{StaticResource PrimaryButtonStyle}" Click="BtnConfirmOffline_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

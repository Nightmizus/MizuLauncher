<Window x:Class="MizuLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MizuLauncher" Height="450" Width="750"
        MinHeight="450" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResize"
        Foreground="White"
        FontFamily="Microsoft YaHei UI">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="-1" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <CornerRadius x:Key="MainCornerRadius">12</CornerRadius>
        <SolidColorBrush x:Key="CardBackground" Color="White" Opacity="0.03"/>
        <SolidColorBrush x:Key="CardBorder" Color="Transparent"/>
        <SolidColorBrush x:Key="VisibleBorderBrush" Color="White" Opacity="0.1"/>
        <SolidColorBrush x:Key="SeparatorBrush" Color="White" Opacity="0.1"/>
        <SolidColorBrush x:Key="PrimaryTextBrush" Color="White"/>
        <SolidColorBrush x:Key="SecondaryTextBrush" Color="White" Opacity="0.6"/>
        <SolidColorBrush x:Key="PlaceholderTextBrush" Color="White" Opacity="0.4"/>
        <SolidColorBrush x:Key="ControlBackgroundBrush" Color="White" Opacity="0.1"/>
        <SolidColorBrush x:Key="ControlMouseOverBrush" Color="White" Opacity="0.15"/>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <Grid>
                                <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                                <TextBlock x:Name="PlaceholderText" Text="{TemplateBinding Tag}" 
                                           Foreground="{StaticResource PlaceholderTextBrush}" 
                                           Margin="{TemplateBinding Padding}"
                                           IsHitTestVisible="False" Visibility="Collapsed"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <MultiTrigger>
                                <MultiTrigger.Conditions>
                                    <Condition Property="Text" Value=""/>
                                </MultiTrigger.Conditions>
                                <Setter TargetName="PlaceholderText" Property="Visibility" Value="Visible"/>
                            </MultiTrigger>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="CaretBrush" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" 
                                CornerRadius="8" BorderThickness="{TemplateBinding BorderThickness}" 
                                BorderBrush="{TemplateBinding BorderBrush}">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="false" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                            </Trigger>
                            <Trigger Property="IsFocused" Value="true">
                                <Setter Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton" Background="{TemplateBinding Background}" 
                                          BorderThickness="{TemplateBinding BorderThickness}" 
                                          BorderBrush="{TemplateBinding BorderBrush}" 
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="8">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="30"/>
                                                </Grid.ColumnDefinitions>
                                                <Path x:Name="Arrow" Grid.Column="1" Fill="{StaticResource SecondaryTextBrush}" 
                                                      HorizontalAlignment="Center" VerticalAlignment="Center" Data="M 0 0 L 4 4 L 8 0"/>
                                            </Grid>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite" IsHitTestVisible="False" 
                                              Content="{TemplateBinding SelectionBoxItem}" 
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}" 
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}" 
                                              Margin="{TemplateBinding Padding}" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                            <Popup x:Name="Popup" Placement="Bottom" IsOpen="{TemplateBinding IsDropDownOpen}" AllowsTransparency="True" Focusable="False" PopupAnimation="Slide">
                                <Border x:Name="DropDownBorder" Background="#E0202020" CornerRadius="8" BorderThickness="1" BorderBrush="{StaticResource VisibleBorderBrush}" MinWidth="{TemplateBinding ActualWidth}" Margin="0,5,0,0">
                                    <ScrollViewer SnapsToDevicePixels="True">
                                        <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Foreground" Value="{StaticResource PrimaryTextBrush}"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBoxItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="4" Margin="2">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlMouseOverBrush}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="BaseButtonStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="{TemplateBinding Tag}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#25FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true" Background="Transparent">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Rectangle x:Name="ThumbBorder" Fill="#40FFFFFF" RadiusX="1.5" RadiusY="1.5" Width="3" HorizontalAlignment="Right"/>
                                                <ControlTemplate.Triggers>
                                                    <EventTrigger RoutedEvent="MouseEnter">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Width" To="6" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="RadiusX" To="3" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="RadiusY" To="3" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                    <EventTrigger RoutedEvent="MouseLeave">
                                                        <BeginStoryboard>
                                                            <Storyboard>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="Width" To="3" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="RadiusX" To="1.5" Duration="0:0:0.1"/>
                                                                <DoubleAnimation Storyboard.TargetName="ThumbBorder" Storyboard.TargetProperty="RadiusY" To="1.5" Duration="0:0:0.1"/>
                                                            </Storyboard>
                                                        </BeginStoryboard>
                                                    </EventTrigger>
                                                </ControlTemplate.Triggers>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid x:Name="ScrollViewerRoot" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Orientation="Vertical" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{TemplateBinding VerticalOffset}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource ModernScrollBar}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#35FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickLaunchCardStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{StaticResource MainCornerRadius}">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="删除卡片" Click="DeleteQuickLaunchCard_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Grid Background="Transparent">
                                <TextBlock Text="{TemplateBinding Content}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="10"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayerListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="8" Margin="2">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="删除玩家" Click="DeletePlayer_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Grid Margin="{TemplateBinding Padding}">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="24"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Width="20" Height="20" Background="#30FFFFFF" CornerRadius="3">
                                     <Image Source="{Binding Avatar}" 
                                            Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                                 </Border>
                                <TextBlock Grid.Column="1" Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="13"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="PlayerCardToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{StaticResource MainCornerRadius}">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VersionListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="{StaticResource MainCornerRadius}" IsHitTestVisible="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainRoot" Background="Transparent">

        <!-- 默认亚克力纯黑蒙层 -->
        <Border x:Name="BgTint" Background="#60000000" IsHitTestVisible="False"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="12,12,12,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MizuLauncher" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="12,0,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True">
                    <RadioButton x:Name="BtnHome" Content="首页" Style="{StaticResource NavButtonStyle}" IsChecked="True" Click="BtnHome_Click" GroupName="NavGroup"/>
                    <RadioButton x:Name="BtnDownload" Content="下载" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Click="BtnDownload_Click" GroupName="NavGroup"/>
                    <RadioButton x:Name="BtnMore" Content="更多" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Click="BtnMore_Click" GroupName="NavGroup"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,0,0" VerticalAlignment="Center">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BaseButtonStyle}" Tag="8" Foreground="White" Width="40" Height="40" FontSize="10" Click="BtnMinimize_Click"/>
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BaseButtonStyle}" Tag="8" Foreground="White" Width="40" Height="40" FontSize="10" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="12,12,12,0">
                <!-- 首页内容 -->
                <Grid x:Name="HomeContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="Transparent" CornerRadius="{StaticResource MainCornerRadius}" 
                            BorderBrush="Transparent" BorderThickness="0" Margin="0,0,6,0"
                            AllowDrop="True" Drop="ListVersions_Drop" DragOver="ListVersions_DragOver">
                        <DockPanel Margin="10,2,10,10">
                            <TextBlock Text="版本列表" DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Margin="8,2,0,8"/>
                            <ListBox x:Name="ListVersions" Background="Transparent" BorderThickness="0" 
                                     ItemContainerStyle="{StaticResource VersionListItemStyle}"
                                     PreviewMouseLeftButtonDown="ListVersions_PreviewMouseLeftButtonDown"
                                     MouseMove="ListVersions_MouseMove"/>
                        </DockPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="6,0,0,0" AllowDrop="True" Drop="QuickLaunch_Drop" DragOver="QuickLaunch_DragOver" Background="Transparent">
                        <Grid>
                            <TextBlock x:Name="TxtDragHint" Text="将左侧版本拖动到此处创建磁贴" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="#40FFFFFF" 
                                       FontSize="14"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Items.Count, ElementName=QuickLaunchItems}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ItemsControl x:Name="QuickLaunchItems" Margin="0">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" Rows="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource QuickLaunchCardStyle}" 
                                                Click="QuickLaunchCard_Click"
                                                PreviewMouseLeftButtonDown="QuickLaunchCard_PreviewMouseLeftButtonDown"
                                                MouseMove="QuickLaunchCard_MouseMove"
                                                Margin="6"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 下载页面内容 -->
                <Grid x:Name="DownloadContent" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="10,0,10,15">
                        <RadioButton x:Name="TabGameCore" Content="游戏核心" Style="{StaticResource NavButtonStyle}" IsChecked="True" GroupName="DownloadTab" Click="DownloadTab_Click"/>
                        <RadioButton x:Name="TabModSearch" Content="模组搜索" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" GroupName="DownloadTab" Click="DownloadTab_Click"/>
                        <RadioButton x:Name="TabDownloadTasks" Content="下载任务" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" GroupName="DownloadTab" Click="DownloadTab_Click"/>
                    </StackPanel>

                    <Grid Grid.Row="1">
                        <!-- 游戏核心下载 -->
                        <Grid x:Name="GameCorePanel" Visibility="Visible">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            
                            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Margin="0,0,10,0">
                                <DockPanel>
                                    <TextBlock Text="核心版本" DockPanel.Dock="Top" Margin="15,15,15,10" FontWeight="Bold" FontSize="16"/>
                                    <Button x:Name="BtnRefreshVanilla" Content="刷新版本列表" DockPanel.Dock="Bottom" Margin="10" Style="{StaticResource BaseButtonStyle}" Height="35" Click="BtnRefreshVanilla_Click" Tag="12"/>
                                    <ListBox x:Name="ListVanillaVersions" Background="Transparent" BorderThickness="0" Margin="5" ItemContainerStyle="{StaticResource VersionListItemStyle}" SelectionChanged="ListVanillaVersions_SelectionChanged"/>
                                </DockPanel>
                            </Border>

                            <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="12">
                                <Grid x:Name="VersionInstallPanel" Visibility="Collapsed">
                                    <StackPanel Margin="20">
                                        <TextBlock x:Name="TxtSelectedVersion" Text="选择一个版本" FontSize="20" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryTextBrush}"/>
                                        
                                        <TextBlock Text="选择加载器" FontSize="14" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                            <RadioButton x:Name="RadioVanilla" Content="Vanilla" IsChecked="True" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,15,0" Checked="LoaderRadio_Checked"/>
                                            <RadioButton x:Name="RadioForge" Content="Forge" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,15,0" Checked="LoaderRadio_Checked"/>
                                            <RadioButton x:Name="RadioFabric" Content="Fabric" Foreground="{StaticResource PrimaryTextBrush}" Margin="0,0,15,0" Checked="LoaderRadio_Checked"/>
                                            <RadioButton x:Name="RadioQuilt" Content="Quilt" Foreground="{StaticResource PrimaryTextBrush}" Checked="LoaderRadio_Checked"/>
                                        </StackPanel>

                                        <TextBlock x:Name="TxtLoaderVersionLabel" Text="加载器版本" FontSize="14" Margin="0,0,0,10" Visibility="Collapsed" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <ComboBox x:Name="ComboLoaderVersions" Height="35" Margin="0,0,0,20" Visibility="Collapsed"/>

                                        <Button x:Name="BtnInstallVersion" Content="开始安装" Style="{StaticResource BaseButtonStyle}" Height="40" Width="120" HorizontalAlignment="Left" Click="BtnInstallVersion_Click" Tag="12" Foreground="Black" Background="White"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </Grid>

                        <!-- 模组搜索 -->
                        <Grid x:Name="ModSearchPanel" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="ModSearchHeader" Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="TxtModSearchQuery" Height="35" Tag="搜索模组..."/>
                                <ComboBox Grid.Column="1" x:Name="ComboModSource" Width="120" Height="35" Margin="10,0,0,0">
                                    <ComboBoxItem Content="Modrinth" IsSelected="True"/>
                                    <ComboBoxItem Content="CurseForge"/>
                                </ComboBox>
                                <Button Grid.Column="2" Content="搜索" Width="80" Height="35" Margin="10,0,0,0" Style="{StaticResource BaseButtonStyle}" Click="BtnModSearch_Click" Tag="8" Foreground="Black" Background="White"/>
                            </Grid>

                            <!-- 搜索结果列表 -->
                            <ListBox x:Name="ListModResults" Grid.Row="1" Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource VersionListItemStyle}" Visibility="Visible">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid Margin="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="48"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Width="40" Height="40" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="8">
                                                <Image Source="{Binding IconUrl}" Stretch="UniformToFill"/>
                                            </Border>
                                            <StackPanel Grid.Column="1" Margin="15,0,0,0" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryTextBrush}"/>
                                                <TextBlock Text="{Binding Author}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,2,0,0"/>
                                            </StackPanel>
                                            <Button Grid.Column="2" Content="查看版本" VerticalAlignment="Center" Padding="15,5" Style="{StaticResource BaseButtonStyle}" Click="BtnShowModVersions_Click" Tag="8" Foreground="Black" Background="White"/>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <!-- 模组版本列表 -->
                            <Grid x:Name="ModVersionsPanel" Grid.Row="1" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Button Content="返回搜索结果" Style="{StaticResource BaseButtonStyle}" HorizontalAlignment="Left" Padding="10,5" Margin="0,0,0,10" Click="BtnBackToModSearch_Click" Tag="8" Foreground="Black" Background="White"/>
                                
                                <ListBox x:Name="ListModVersions" Grid.Row="1" Background="Transparent" BorderThickness="0" ItemContainerStyle="{StaticResource VersionListItemStyle}">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Grid Margin="5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <StackPanel Orientation="Horizontal">
                                                        <TextBlock Text="{Binding VersionNumber}" FontWeight="Bold" FontSize="14" Foreground="{StaticResource PrimaryTextBrush}"/>
                                                        <Border Background="{StaticResource ControlBackgroundBrush}" CornerRadius="4" Margin="10,0,0,0" Padding="5,2">
                                                            <TextBlock Text="{Binding DisplayType}" FontSize="10" VerticalAlignment="Center" Foreground="{StaticResource PrimaryTextBrush}"/>
                                                        </Border>
                                                    </StackPanel>
                                                    <TextBlock Text="{Binding DisplayGameVersions}" FontSize="12" Foreground="{StaticResource SecondaryTextBrush}" Margin="0,5,0,0"/>
                                                    <TextBlock Text="{Binding DisplayLoaders}" FontSize="12" Foreground="#50A2FF" FontWeight="SemiBold" Margin="0,2,0,0"/>
                                                </StackPanel>
                                                <Button Grid.Column="1" Content="下载" VerticalAlignment="Center" Padding="15,5" Style="{StaticResource BaseButtonStyle}" Click="BtnDownloadModVersion_Click" Tag="8" Foreground="Black" Background="White"/>
                                            </Grid>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </Grid>

                        <!-- 下载任务 -->
                        <Grid x:Name="DownloadTasksPanel" Visibility="Collapsed">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <Button Content="清空已完成" Style="{StaticResource BaseButtonStyle}" Padding="15,5" Click="BtnClearCompleted_Click" Tag="8" Foreground="Black" Background="White"/>
                                <Button Content="打开模组文件夹" Style="{StaticResource BaseButtonStyle}" Margin="10,0,0,0" Padding="15,5" Click="BtnOpenModsFolder_Click" Tag="8" Foreground="Black" Background="White"/>
                            </StackPanel>

                            <ListBox Grid.Row="1" x:Name="ListDownloadTasks" Background="Transparent" BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="{StaticResource ControlBackgroundBrush}" CornerRadius="8" Margin="0,0,0,10" Padding="15">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="100"/>
                                                </Grid.ColumnDefinitions>
                                                <StackPanel>
                                                    <TextBlock Text="{Binding Name}" FontWeight="Bold" Margin="0,0,0,5" Foreground="{StaticResource PrimaryTextBrush}"/>
                                                    <ProgressBar Value="{Binding Progress}" Height="4" Background="{StaticResource ControlBackgroundBrush}" Foreground="#FF00A2FF" BorderThickness="0"/>
                                                </StackPanel>
                                                <TextBlock Grid.Column="1" Text="{Binding Status}" HorizontalAlignment="Right" VerticalAlignment="Center" Foreground="{StaticResource SecondaryTextBrush}" FontSize="12"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- 更多页面内容 -->
                <Grid x:Name="MoreContent" Visibility="Collapsed">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="设置" FontSize="22" FontWeight="Bold" Margin="0,0,0,20" Foreground="{StaticResource PrimaryTextBrush}"/>
                            
                            <!-- 个性化 -->
                            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="15" Margin="0,0,0,15">
                                <StackPanel>
                                    <TextBlock Text="个性化背景" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                        <RadioButton x:Name="RadioMica" Content="云母 (Mica)" Click="RadioBg_Click" Margin="0,0,20,0" Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <RadioButton x:Name="RadioAcrylic" Content="亚克力 (Acrylic)" Click="RadioBg_Click" Margin="0,0,20,0" Foreground="{StaticResource PrimaryTextBrush}"/>
                                        <RadioButton x:Name="RadioSolid" Content="纯色 (Solid)" Click="RadioBg_Click" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    </StackPanel>

                                    <StackPanel x:Name="SolidColorSettings" Visibility="Collapsed">
                                        <TextBlock Text="选择颜色" FontSize="14" Margin="0,0,0,10" Foreground="{StaticResource SecondaryTextBrush}"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                            <Button Content="黑色" Click="ColorBtn_Click" Tag="#FF000000" Style="{StaticResource BaseButtonStyle}" Margin="0,0,5,0" Width="60" Height="30" Foreground="White" Background="#FF000000"/>
                                            <Button Content="深灰" Click="ColorBtn_Click" Tag="#FF1E1E1E" Style="{StaticResource BaseButtonStyle}" Margin="0,0,5,0" Width="60" Height="30" Foreground="White" Background="#FF1E1E1E"/>
                                            <Button Content="深蓝" Click="ColorBtn_Click" Tag="#FF001220" Style="{StaticResource BaseButtonStyle}" Margin="0,0,5,0" Width="60" Height="30" Foreground="White" Background="#FF001220"/>
                                            <Button Content="深紫" Click="ColorBtn_Click" Tag="#FF120020" Style="{StaticResource BaseButtonStyle}" Margin="0,0,5,0" Width="60" Height="30" Foreground="White" Background="#FF120020"/>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal">
                                            <TextBox x:Name="TxtCustomColor" Width="100" Height="30" Margin="0,0,10,0" Text="#FF1E1E1E"/>
                                            <Button Content="应用" Click="ApplyCustomColor_Click" Style="{StaticResource BaseButtonStyle}" Width="80" Height="30" Tag="4" Foreground="Black" Background="White"/>
                                        </StackPanel>
                                    </StackPanel>
                                </StackPanel>
                            </Border>

                            <!-- 功能设置 -->
                            <Border Background="{StaticResource CardBackground}" CornerRadius="12" Padding="15">
                                <StackPanel>
                                    <TextBlock Text="界面设置" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15" Foreground="{StaticResource PrimaryTextBrush}"/>
                                    <CheckBox x:Name="CheckShowDragHint" Content="显示磁贴拖动提示" Click="CheckShowDragHint_Click" Foreground="{StaticResource PrimaryTextBrush}" VerticalContentAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="12,0,12,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0" Margin="0,0,6,0">
                    <!-- 仅在左侧版本列表与玩家选项之间显示的分隔线 -->
                    <Border Height="1" Background="{StaticResource SeparatorBrush}" VerticalAlignment="Top" Margin="0,-6,0,0"/>
                    
                    <ToggleButton x:Name="BtnPlayerCard" Style="{StaticResource PlayerCardToggleStyle}" 
                                  VerticalAlignment="Center" Height="48">
                        <Grid HorizontalAlignment="Stretch">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="32"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Width="30" Height="30" Background="{StaticResource ControlBackgroundBrush}" CornerRadius="4">
                                <Image x:Name="ImgPlayerAvatar" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                            </Border>
                            <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                                <TextBlock x:Name="TxtPlayerName" Text="添加玩家" FontSize="14" FontWeight="Bold" Foreground="{StaticResource PrimaryTextBrush}"/>
                                <TextBlock x:Name="TxtPlayerType" Text="离线模式" FontSize="10" Foreground="{StaticResource SecondaryTextBrush}"/>
                            </StackPanel>
                            <StackPanel Grid.Column="2" VerticalAlignment="Center" Opacity="0.5">
                                <Path Data="M 0 0 L 4 4 L 8 0" Stroke="White" StrokeThickness="1.5"/>
                                <Path Data="M 0 4 L 4 0 L 8 4" Stroke="White" StrokeThickness="1.5" Margin="0,3,0,0"/>
                            </StackPanel>
                        </Grid>
                    </ToggleButton>

                    <Popup x:Name="PopupPlayers" 
                           PlacementTarget="{Binding ElementName=BtnPlayerCard}" 
                           Placement="Top" 
                           IsOpen="{Binding IsChecked, ElementName=BtnPlayerCard, Mode=TwoWay}"
                           StaysOpen="False" 
                           AllowsTransparency="True" 
                           PopupAnimation="Slide" 
                           VerticalOffset="-5">
                        <Border Background="#E0202020" CornerRadius="12" BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Width="220" Margin="0,0,0,10">
                            <StackPanel Margin="5">
                                <Button Content="+" FontSize="18" FontWeight="Bold" Style="{StaticResource BaseButtonStyle}" Foreground="{StaticResource SecondaryTextBrush}" Height="35" Click="BtnAddPlayer_Click"/>
                                
                                <TextBlock Text="正版账号" Foreground="{StaticResource PlaceholderTextBrush}" FontSize="10" Margin="10,5,0,2"/>
                                <ListBox x:Name="ListOnlinePlayers" Background="Transparent" BorderThickness="0" MaxHeight="100"
                                         ItemContainerStyle="{StaticResource PlayerListItemStyle}"
                                         SelectionChanged="ListPlayers_SelectionChanged"/>

                                <Border Background="{StaticResource SeparatorBrush}" Height="1" Margin="10,5"/>

                                <TextBlock Text="离线账号" Foreground="{StaticResource PlaceholderTextBrush}" FontSize="10" Margin="10,5,0,2"/>
                                <ListBox x:Name="ListOfflinePlayers" Background="Transparent" BorderThickness="0" MaxHeight="150"
                                         ItemContainerStyle="{StaticResource PlayerListItemStyle}"
                                         SelectionChanged="ListPlayers_SelectionChanged"/>
                            </StackPanel>
                        </Border>
                    </Popup>
                </Grid>

                <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                        Margin="6,0" VerticalAlignment="Center" Height="48" BorderBrush="{StaticResource VisibleBorderBrush}" BorderThickness="1"
                        x:Name="BorderProgress" ClipToBounds="True">
                    <Grid>
                        <Rectangle x:Name="RectProgress" Fill="{StaticResource ControlMouseOverBrush}" HorizontalAlignment="Left" Width="0" RadiusX="12" RadiusY="12"/>
                        <TextBlock x:Name="TxtProgressStep" Text="等待中..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" Foreground="{StaticResource PrimaryTextBrush}" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Margin="5,0"/>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                        Margin="6,0" VerticalAlignment="Center" Height="48" Width="48" BorderBrush="{StaticResource VisibleBorderBrush}" BorderThickness="1">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Style="{StaticResource BaseButtonStyle}" Tag="{StaticResource MainCornerRadius}" Foreground="{StaticResource SecondaryTextBrush}" FontSize="20" Width="48" Height="48"/>
                </Border>

                <Button x:Name="BtnLaunch" Grid.Column="3" Content="启动游戏" Click="BtnLaunch_Click" VerticalAlignment="Center" Height="48" Width="140" Margin="6,0,0,0" FontWeight="Bold" FontSize="15" IsEnabled="False">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="White" CornerRadius="{StaticResource MainCornerRadius}">
                                <ContentPresenter x:Name="Presenter" HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="Black"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Background" Value="{StaticResource ControlBackgroundBrush}"/>
                                    <Setter TargetName="Presenter" Property="TextElement.Foreground" Value="{StaticResource PlaceholderTextBrush}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>
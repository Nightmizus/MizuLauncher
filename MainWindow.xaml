<Window x:Class="MizuLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MizuLauncher" Height="450" Width="750"
        MinHeight="450" MinWidth="750"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        WindowStyle="None"
        ResizeMode="CanResize"
        Foreground="White"
        FontFamily="Microsoft YaHei UI">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="40" 
                      ResizeBorderThickness="8" 
                      GlassFrameThickness="-1" 
                      CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <CornerRadius x:Key="MainCornerRadius">12</CornerRadius>
        <SolidColorBrush x:Key="CardBackground" Color="White" Opacity="0.1"/>
        <SolidColorBrush x:Key="CardBorder" Color="White" Opacity="0.05"/>

        <Style x:Key="ModernScrollBar" TargetType="ScrollBar">
            <Setter Property="Width" Value="6"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid x:Name="Bg" SnapsToDevicePixels="true">
                            <Track x:Name="PART_Track" IsDirectionReversed="true" IsEnabled="{TemplateBinding IsEnabled}">
                                <Track.Thumb>
                                    <Thumb x:Name="Thumb">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Background="#40FFFFFF" CornerRadius="3" Margin="1,0"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ScrollViewer">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollViewer">
                        <Grid x:Name="ScrollViewerRoot" Background="{TemplateBinding Background}">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <ScrollContentPresenter x:Name="PART_ScrollContentPresenter" CanContentScroll="{TemplateBinding CanContentScroll}" CanHorizontallyScroll="False" CanVerticallyScroll="False" ContentTemplate="{TemplateBinding ContentTemplate}" Content="{TemplateBinding Content}" Grid.Column="0" Margin="{TemplateBinding Padding}" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            <ScrollBar x:Name="PART_VerticalScrollBar" AutomationProperties.AutomationId="VerticalScrollBar" Cursor="Arrow" Grid.Column="1" Maximum="{TemplateBinding ScrollableHeight}" Minimum="0" Orientation="Vertical" Visibility="{TemplateBinding ComputedVerticalScrollBarVisibility}" Value="{TemplateBinding VerticalOffset}" ViewportSize="{TemplateBinding ViewportHeight}" Style="{StaticResource ModernScrollBar}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="NavButtonStyle" TargetType="RadioButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="#80FFFFFF"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="15,6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RadioButton">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#35FFFFFF"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="QuickLaunchCardStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="6"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="{StaticResource MainCornerRadius}">
                            <Border.ContextMenu>
                                <ContextMenu>
                                    <MenuItem Header="删除卡片" Click="DeleteQuickLaunchCard_Click"/>
                                </ContextMenu>
                            </Border.ContextMenu>
                            <Grid Background="Transparent">
                                <TextBlock Text="{TemplateBinding Content}" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"
                                           TextAlignment="Center"
                                           Margin="10"
                                           IsHitTestVisible="False"/>
                                <TextBlock Text="快速启动" 
                                           VerticalAlignment="Bottom" 
                                           HorizontalAlignment="Right" 
                                           Margin="0,0,10,8" 
                                           FontSize="8" 
                                           Foreground="#80FFFFFF"
                                           IsHitTestVisible="False"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#50FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VersionListItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="12,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Margin" Value="0,1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Bd" Background="Transparent" CornerRadius="{StaticResource MainCornerRadius}" IsHitTestVisible="True">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#15FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid x:Name="MainRoot" Background="Transparent">

        <Border Background="#20000000"/>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="75"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="6">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="MizuLauncher" FontSize="16" FontWeight="Bold" VerticalAlignment="Center" Margin="25,0,0,0"/>
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" WindowChrome.IsHitTestVisibleInChrome="True">
                    <RadioButton x:Name="BtnHome" Content="首页" Style="{StaticResource NavButtonStyle}" IsChecked="True" Click="BtnHome_Click" GroupName="NavGroup"/>
                    <RadioButton x:Name="BtnMore" Content="更多" Style="{StaticResource NavButtonStyle}" Margin="10,0,0,0" Click="BtnMore_Click" GroupName="NavGroup"/>
                </StackPanel>
                <StackPanel Grid.Column="2" Orientation="Horizontal" WindowChrome.IsHitTestVisibleInChrome="True" Margin="0,0,10,0" VerticalAlignment="Center">
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0" Foreground="White" Width="40" Height="40" FontSize="10" Click="BtnMinimize_Click"/>
                    <Button Content="" FontFamily="Segoe MDL2 Assets" Background="Transparent" BorderThickness="0" Foreground="White" Width="40" Height="40" FontSize="10" Click="BtnClose_Click"/>
                </StackPanel>
            </Grid>

            <Grid Grid.Row="1" Margin="6,0">
                <!-- 首页内容 -->
                <Grid x:Name="HomeContent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="220"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                            BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Margin="6"
                            AllowDrop="True" Drop="ListVersions_Drop" DragOver="ListVersions_DragOver">
                        <DockPanel Margin="10">
                            <TextBlock Text="版本列表" DockPanel.Dock="Top" FontSize="18" FontWeight="Bold" Margin="8,5,0,10"/>
                            <ListBox x:Name="ListVersions" Background="Transparent" BorderThickness="0" 
                                     ItemContainerStyle="{StaticResource VersionListItemStyle}"
                                     PreviewMouseLeftButtonDown="ListVersions_PreviewMouseLeftButtonDown"
                                     MouseMove="ListVersions_MouseMove"/>
                        </DockPanel>
                    </Border>

                    <Border Grid.Column="1" Margin="6" AllowDrop="True" Drop="QuickLaunch_Drop" DragOver="QuickLaunch_DragOver" Background="Transparent">
                        <Grid>
                            <TextBlock Text="将左侧版本拖动到此处创建磁贴" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" 
                                       Foreground="#40FFFFFF" 
                                       FontSize="14"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Items.Count, ElementName=QuickLaunchItems}" Value="0">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <ItemsControl x:Name="QuickLaunchItems">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <UniformGrid Columns="3" Rows="3"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Content="{Binding}" Style="{StaticResource QuickLaunchCardStyle}" 
                                                Click="QuickLaunchCard_Click"
                                                PreviewMouseLeftButtonDown="QuickLaunchCard_PreviewMouseLeftButtonDown"
                                                MouseMove="QuickLaunchCard_MouseMove"/>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Grid>
                    </Border>
                </Grid>

                <!-- 更多页面内容 -->
                <Grid x:Name="MoreContent" Visibility="Collapsed">
                    <Border Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                            BorderBrush="{StaticResource CardBorder}" BorderThickness="1" Margin="6">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="20">
                                <TextBlock Text="更多设置" FontSize="22" FontWeight="Bold" Margin="0,0,0,20"/>
                                
                                <TextBlock Text="个性化背景" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,10"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                                    <RadioButton x:Name="RadioMica" Content="云母 (Mica)" Click="RadioBg_Click" Margin="0,0,20,0" Foreground="White"/>
                                    <RadioButton x:Name="RadioAcrylic" Content="亚克力 (Acrylic)" Click="RadioBg_Click" Margin="0,0,20,0" Foreground="White"/>
                                    <RadioButton x:Name="RadioSolid" Content="纯色 (Solid)" Click="RadioBg_Click" Foreground="White"/>
                                </StackPanel>

                                <StackPanel x:Name="SolidColorSettings" Visibility="Collapsed">
                                     <TextBlock Text="选择颜色" FontSize="14" Margin="0,0,0,10"/>
                                     <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                         <Button Content="黑色" Click="ColorBtn_Click" Tag="#FF000000" Margin="0,0,5,0" Width="60" Height="30"/>
                                         <Button Content="深灰" Click="ColorBtn_Click" Tag="#FF1E1E1E" Margin="0,0,5,0" Width="60" Height="30"/>
                                         <Button Content="深蓝" Click="ColorBtn_Click" Tag="#FF001220" Margin="0,0,5,0" Width="60" Height="30"/>
                                         <Button Content="深紫" Click="ColorBtn_Click" Tag="#FF120020" Margin="0,0,5,0" Width="60" Height="30"/>
                                     </StackPanel>
                                     <StackPanel Orientation="Horizontal">
                                         <TextBox x:Name="TxtCustomColor" Width="100" Height="30" VerticalContentAlignment="Center" Margin="0,0,10,0" Text="#FF1E1E1E"/>
                                         <Button Content="应用自定义颜色" Click="ApplyCustomColor_Click" Width="120" Height="30"/>
                                     </StackPanel>
                                 </StackPanel>
                            </StackPanel>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="6,0,6,12">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="220"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Border Grid.Column="0" Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                        Padding="12,8" VerticalAlignment="Center" Margin="6" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                        MouseLeftButtonDown="PlayerCard_Click" Cursor="Hand">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="32"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.Column="0" Width="30" Height="30" Background="#30FFFFFF" CornerRadius="4">
                            <Image x:Name="ImgPlayerAvatar" Stretch="Fill" RenderOptions.BitmapScalingMode="NearestNeighbor"/>
                        </Border>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0,0,0">
                            <TextBlock x:Name="TxtPlayerName" Text="MizuPlayer" FontSize="14" FontWeight="Bold" Foreground="White"/>
                            <TextBlock Text="离线模式" FontSize="10" Foreground="#80FFFFFF"/>
                        </StackPanel>
                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Opacity="0.5">
                            <Path Data="M 0 0 L 4 4 L 8 0" Stroke="White" StrokeThickness="1.5"/>
                            <Path Data="M 0 4 L 4 0 L 8 4" Stroke="White" StrokeThickness="1.5" Margin="0,3,0,0"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <Border Grid.Column="1" Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                        Margin="6" VerticalAlignment="Center" Height="50" BorderBrush="{StaticResource CardBorder}" BorderThickness="1"
                        x:Name="BorderProgress" ClipToBounds="True">
                    <Grid>
                        <Rectangle x:Name="RectProgress" Fill="#40FFFFFF" HorizontalAlignment="Left" Width="0"/>
                        <TextBlock x:Name="TxtProgressStep" Text="等待中..." HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="11" Foreground="White" FontWeight="SemiBold" TextTrimming="CharacterEllipsis" Margin="5,0"/>
                    </Grid>
                </Border>

                <Border Grid.Column="2" Background="{StaticResource CardBackground}" CornerRadius="{StaticResource MainCornerRadius}" 
                        Margin="6" VerticalAlignment="Center" Height="50" Width="50" BorderBrush="{StaticResource CardBorder}" BorderThickness="1">
                    <TextBlock Text="+" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Foreground="#40FFFFFF" FontWeight="Bold"/>
                </Border>

                <Button x:Name="BtnLaunch" Grid.Column="3" Content="启动游戏" Click="BtnLaunch_Click" VerticalAlignment="Center" Height="50" Width="140" Margin="6" FontWeight="Bold" FontSize="15">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="Bd" Background="White" CornerRadius="{StaticResource MainCornerRadius}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" TextElement.Foreground="Black"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="Bd" Property="Background" Value="#F0F0F0"/>
                                </Trigger>
                                <Trigger Property="IsEnabled" Value="False">
                                    <Setter TargetName="Bd" Property="Background" Value="#30FFFFFF"/>
                                    <Setter Property="Foreground" Value="#60FFFFFF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</Window>